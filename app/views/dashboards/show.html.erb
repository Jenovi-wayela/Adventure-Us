
<%# <h1>Dashboard</h1> %>
<div class="container">
  <div class="mt-4 mb-4 ms-4">
    <h3>Your Experiences</h3>
  </div>
  <div class="grid-container">
    <% @listings.each do |listing| %>
      <div class="col-md-4 mb-2 mx-3">
        <div class="card shadow border p-3 mb-5 bg-white border-opacity-25 rounded-4">
          <div class="card-body">
            <h2 class="card-title fs-4"> <%= listing.title %></h2>
            <p class="card-subtitle mb-2 text-body-secondary"> <%= listing.description %></p>
            <div class="">
              Date: <%= listing.date.strftime('%B %d, %Y') %>
              Location: <%= listing.location %>
              Capacity: <%= listing.capacity %>
              Price: R<%= listing.price %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="mt-4 mb-4 ms-4">
    <h3>Your Bookings</h3>
  </div>
  <div class="grid-container">
    <% @bookings.each do |booking| %>
      <div class="col-md-4 mb-2 mx-3">
        <div class="card shadow border p-3 mb-5 bg-white border-opacity-25 rounded-4">
          <div class="card-body">
            <p class="card-subtitle mb-2 text-body-secondary"><%= booking.experience.title %> Status: <%= booking.status %></p>
          </div>
        </div>
      </div>
  <% end %>
</div>
