<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="container" class="mx-auto" style="width: 500px;">
  <h1><%= @experience.title %></h1>
  <p><%= @experience.description %></p>
  <p><strong>Price:</strong> $<%= @experience.price %></p>
  <p><strong>Date:</strong> <%= @experience.date.strftime('%B %d, %Y') %></p>
  <p><strong>Location:</strong> <%= @experience.location %></p>
  <p><strong>Capacity:</strong> <%= @experience.capacity %></p>


    <%= simple_form_for @booking, url: bookings_path do |f| %>
    <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
    <%= f.input :experience_id, as: :hidden, input_html: { value: @experience.id } %>
    <%# <%= f.input :booking_date, as: :date %>
    <%# <%= f.input :notes, as: :text %>
    <%= f.input :status, as: :select, collection: Booking.statuses.keys, label: 'Status' %>
    <%= f.button :submit, "Book", class: "btn btn-success" %>    
  <% end %>

</div>
